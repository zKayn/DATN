@startuml Personal Account Management - LP Shop

left to right direction
skinparam actorStyle awesome

' Actors
actor "Customer\n(Khách hàng)" as Customer
actor "Admin\n(Quản trị)" as Admin

' Use Cases
usecase "Quản lý tài khoản\ncá nhân\n(Manage Personal\nAccounts)" as UC_Manage
usecase "Thông báo\n(Notifications)" as UC_Notif
usecase "Xem lịch sử\nđơn hàng\n(Order History)" as UC_Orders
usecase "Đăng xuất\n(Log out)" as UC_Logout

' Extended Use Cases
usecase "Thông tin\ntài khoản\n(Account Information)" as UC_Info
usecase "Thông tin cá nhân\n(Personal Information)" as UC_Personal
usecase "Đổi mật khẩu\n(Change Password)" as UC_ChangePass
usecase "Quản lý địa chỉ\n(Manage Addresses)" as UC_Address

' Relationships
Customer --> UC_Manage
Customer --> UC_Notif
Customer --> UC_Orders
Customer --> UC_Logout

Admin --> UC_Manage
Admin --> UC_Logout

' Extend relationships
UC_Manage .> UC_Info : <<extend>>
UC_Info .> UC_Personal : <<extend>>
UC_Info .> UC_ChangePass : <<extend>>
UC_Manage .> UC_Address : <<extend>>

@enduml

@startuml Order Management - LP Shop

left to right direction
skinparam actorStyle awesome

' Actors
actor "Customer\n(Khách hàng)" as Customer
actor "Admin\n(Quản trị)" as Admin

' Main Use Cases
usecase "Quản lý\nđơn hàng\n(Manage Orders)" as UC_ManageOrder
usecase "Đặt hàng\n(Place Order)" as UC_PlaceOrder
usecase "Xem thống kê\n(View Statistics)" as UC_Stats

' Extended Use Cases
usecase "Xem chi tiết\nđơn hàng\n(View Order Details)" as UC_ViewDetail
usecase "Hủy đơn hàng\n(Cancel Order)" as UC_Cancel
usecase "Thanh toán\n(Payment)" as UC_Payment
usecase "Chọn địa chỉ\ngiao hàng\n(Select Address)" as UC_SelectAddr

' Relationships
Customer --> UC_PlaceOrder
Customer --> UC_ManageOrder
Admin --> UC_ManageOrder
Admin --> UC_Stats

' Extend/Include relationships
UC_PlaceOrder ..> UC_Payment : <<include>>
UC_PlaceOrder ..> UC_SelectAddr : <<include>>
UC_ManageOrder .> UC_ViewDetail : <<extend>>
UC_ManageOrder .> UC_Cancel : <<extend>>

@enduml

@startuml Product Management - LP Shop

left to right direction
skinparam actorStyle awesome

' Actors
actor "Customer\n(Khách hàng)" as Customer
actor "Guest\n(Khách vãng lai)" as Guest
actor "Admin\n(Quản trị)" as Admin

' Main Use Cases
usecase "Quản lý\nsản phẩm\n(Manage Products)" as UC_ManageProd
usecase "Xem sản phẩm\n(View Products)" as UC_ViewProd
usecase "Tìm kiếm\n(Search)" as UC_Search

' Extended Use Cases - Admin
usecase "Thêm sản phẩm\n(Add Product)" as UC_Add
usecase "Sửa sản phẩm\n(Edit Product)" as UC_Edit
usecase "Xóa sản phẩm\n(Delete Product)" as UC_Delete
usecase "Cập nhật tồn kho\n(Update Stock)" as UC_Stock

' Extended Use Cases - Customer
usecase "Xem chi tiết\n(View Details)" as UC_Detail
usecase "Thêm vào giỏ\n(Add to Cart)" as UC_AddCart
usecase "Thêm yêu thích\n(Add to Wishlist)" as UC_Wishlist
usecase "Đánh giá\n(Review)" as UC_Review

' Relationships
Guest --> UC_ViewProd
Guest --> UC_Search

Customer --> UC_ViewProd
Customer --> UC_Search

Admin --> UC_ManageProd

' Guest inheritance
Guest <|-- Customer

' Admin extended use cases
UC_ManageProd .> UC_Add : <<extend>>
UC_ManageProd .> UC_Edit : <<extend>>
UC_ManageProd .> UC_Delete : <<extend>>
UC_ManageProd .> UC_Stock : <<extend>>

' Customer extended use cases
UC_ViewProd .> UC_Detail : <<extend>>
UC_Detail .> UC_AddCart : <<extend>>
UC_Detail .> UC_Wishlist : <<extend>>
UC_Detail .> UC_Review : <<extend>>

@enduml
