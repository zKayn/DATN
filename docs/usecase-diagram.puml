@startuml LP Shop - Use Case Diagram
!define RECTANGLE class

left to right direction
skinparam packageStyle rectangle
skinparam actorStyle awesome

' Actors
actor "Khách vãng lai\n(Guest)" as Guest
actor "Khách hàng\n(Customer)" as Customer
actor "Quản trị viên\n(Admin)" as Admin

' Inheritance
Guest <|-- Customer

' System boundary
rectangle "LP Shop System" {

  ' Guest use cases
  package "Chức năng công khai" {
    usecase "Xem danh sách sản phẩm" as UC1
    usecase "Xem chi tiết sản phẩm" as UC2
    usecase "Tìm kiếm sản phẩm" as UC3
    usecase "Lọc sản phẩm theo danh mục" as UC4
    usecase "Xem Flash Sale" as UC5
    usecase "Đăng ký tài khoản" as UC6
    usecase "Đăng nhập" as UC7
  }

  ' Customer use cases
  package "Chức năng khách hàng" {
    usecase "Thêm vào giỏ hàng" as UC8
    usecase "Quản lý giỏ hàng" as UC9
    usecase "Đặt hàng" as UC10
    usecase "Thanh toán" as UC11
    usecase "Xem lịch sử đơn hàng" as UC12
    usecase "Xem chi tiết đơn hàng" as UC13
    usecase "Hủy đơn hàng" as UC14
    usecase "Đánh giá sản phẩm" as UC15
    usecase "Xem/Quản lý yêu thích" as UC16
    usecase "Quản lý địa chỉ giao hàng" as UC17
    usecase "Cập nhật thông tin cá nhân" as UC18
    usecase "Xem thông báo" as UC19
    usecase "Xem điểm tích lũy" as UC20
    usecase "Đăng xuất" as UC21
  }

  ' Admin use cases
  package "Chức năng quản trị" {
    usecase "Quản lý sản phẩm" as UC22
    usecase "Quản lý danh mục" as UC23
    usecase "Quản lý đơn hàng" as UC24
    usecase "Cập nhật trạng thái đơn hàng" as UC25
    usecase "Quản lý người dùng" as UC26
    usecase "Quản lý đánh giá" as UC27
    usecase "Xem thống kê" as UC28
    usecase "Quản lý banner/khuyến mãi" as UC29
    usecase "Gửi thông báo" as UC30
    usecase "Quản lý newsletter" as UC31
  }
}

' Guest relationships
Guest --> UC1
Guest --> UC2
Guest --> UC3
Guest --> UC4
Guest --> UC5
Guest --> UC6
Guest --> UC7

' Customer relationships
Customer --> UC8
Customer --> UC9
Customer --> UC10
Customer --> UC11
Customer --> UC12
Customer --> UC13
Customer --> UC14
Customer --> UC15
Customer --> UC16
Customer --> UC17
Customer --> UC18
Customer --> UC19
Customer --> UC20
Customer --> UC21

' Admin relationships
Admin --> UC22
Admin --> UC23
Admin --> UC24
Admin --> UC25
Admin --> UC26
Admin --> UC27
Admin --> UC28
Admin --> UC29
Admin --> UC30
Admin --> UC31
Admin --> UC7

' Include relationships
UC10 ..> UC11 : <<include>>
UC10 ..> UC17 : <<include>>
UC22 ..> UC23 : <<extend>>
UC24 ..> UC25 : <<include>>

' Extend relationships
UC2 ..> UC15 : <<extend>>
UC2 ..> UC16 : <<extend>>

@enduml
